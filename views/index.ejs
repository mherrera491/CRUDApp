<!DOCTYPE html>
<html lang="en">
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container">
    <h2>Bars</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for(let i = 0; i < bars.length; i++) { %>
      <div class="col">
        <div class="card mb-4 d-flex flex-column">
          <img
            src="<%= bars[i].img %>"
            class="card-img-top img-fluid"
            alt="Bar Image"
          />
          <div class="card-body">
            <h5 class="card-title"><%= bars[i].name %></h5>
            <a href="/bars/<%= bars[i].id %>" class="btn btn-default" role="button"
              >More Details</a
            ><br>
            <a href="/bars/<%= bars[i].id %>/edit" class="btn btn-default" role="button"
              >Edit</a
            >
            <form action="/bars/<%= bars[i].id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete" class="btn btn-danger" type="button"/>
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  </body>
</html>
